{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "comment": {
      "type": "string",
      "minLength": 1
    },
    "file": {
      "type": "string",
      "minLength": 1
    },
    "commentSource": {
      "type": "object",
      "properties": {
        "userID": {
          "type": "string",
          "minLength": 1
        },
        "userPic": {
          "type": "string",
          "minLength": 1
        },
        "userName": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["userID", "userPic", "userName"],
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "likes": {
      "type": "integer",
      "minimum": 0
    },
    "commentCount": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": ["id", "comment", "file", "commentSource", "tags", "likes", "commentCount"],
  "additionalProperties": false
}
