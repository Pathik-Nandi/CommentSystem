{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "commentTreeId": {
      "type": "string"
    },
    "commentId": {
      "type": "string"
    },
    "entityId": {
      "type": "string"
    },
    "entityType": {
      "type": "string",
      "minLength": 1
    },
    "comment": {
      "type": "string",
      "minLength": 1
    },
    "workflow": {
      "type": "string",
      "minLength": 1
    },
    "file": {
      "type": "string",
      "minLength": 1
    },
    "hierarchyPath": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "commentSource": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "minLength": 1
        },
        "userPic": {
          "type": "string",
          "minLength": 1
        },
        "userName": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["userId", "userPic", "userName"],
      "additionalProperties": false
    }
  },
  "required": ["comment", "commentSource"],
  "additionalProperties": false
}
